<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Real Estate Deal Analyzer</title>
  <style>
    body { font-family: sans-serif; padding: 2rem; max-width: 600px; margin: auto; }
    label, select, input { display: block; margin: 1rem 0; width: 100%; }
    button { padding: 0.75rem; }
    .results { margin-top: 2rem; background: #f4f4f4; padding: 1rem; border-radius: 8px; }
  </style>
</head>
<body>
  <h1>Real Estate Deal Analyzer</h1>

  <form id="deal-form">
    <label>Address <input type="text" name="address" required></label>
    <label>ZIP Code <input type="text" name="zip_code" required></label>
    <label>Purchase Price <input type="number" name="purchase_price" required></label>
    <label>Down Payment <input type="number" name="down_payment" required></label>
    <label>Monthly Rent <input type="number" name="monthly_rent" required></label>

    <label>Strategy
      <select name="strategy" id="strategy-select">
        <option value="subto">Subto</option>
        <option value="seller_finance">Seller Finance</option>
      </select>
    </label>

    <div id="strategy-fields"></div>

    <button type="submit">Analyze Deal</button>
  </form>

  <div class="results" id="results" style="display:none;"></div>

  <script>
    const form = document.getElementById('deal-form');
    const strategySelect = document.getElementById('strategy-select');
    const strategyFields = document.getElementById('strategy-fields');
    const resultsBox = document.getElementById('results');

    function updateStrategyFields() {
      const strategy = strategySelect.value;
      strategyFields.innerHTML = '';

      if (strategy === 'subto') {
        strategyFields.innerHTML = `
          <label>Interest Rate (%) <input type="number" step="0.01" name="interest_rate" required></label>
          <label>Term (Years) <input type="number" name="term_years" required></label>
        `;
      } else if (strategy === 'seller_finance') {
        strategyFields.innerHTML = `
          <label>Interest Rate (%) <input type="number" step="0.01" name="seller_finance_interest_rate" required></label>
          <label>Term (Years) <input type="number" name="seller_finance_term_years" required></label>
        `;
      }
    }

    updateStrategyFields();
    strategySelect.addEventListener('change', updateStrategyFields);

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(form).entries());

      // Convert numbers
      for (let key in data) {
        if (!isNaN(data[key]) && data[key] !== "") {
          data[key] = parseFloat(data[key]);
        }
      }

      const response = await fetch('https://real-estate-deal-analyzer.onrender.com/analyze', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      resultsBox.style.display = 'block';
      resultsBox.innerHTML = `
        <strong>Strategy:</strong> ${result.strategy}<br>
        <strong>Monthly Payment:</strong> $${result.monthly_payment}<br>
        <strong>Net Operating Income:</strong> $${result.net_operating_income}<br>
        <strong>Cash Flow:</strong> $${result.cash_flow}
      `;
    });
  </script>
</body>
</html>
